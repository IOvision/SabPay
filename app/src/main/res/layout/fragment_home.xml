<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:layout_height="match_parent"
    tools:context=".main.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/home_card"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home_your_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Your Wallet"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textColor="@color/purple"/>

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/home_balance_pb"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/home_your_wallet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:SpinKit_Color="@color/grey"/>

                <TextView
                    android:id="@+id/home_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@id/home_your_wallet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_balance"
                    android:layout_centerHorizontal="true"
                    android:text="Current Balance"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/purple"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/home_add_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/purple"
            app:rippleColor="@color/white"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/icon_add_money"
            app:iconTint="@color/white"
            android:text="Add Money"
            android:textAllCaps="false"/>


    </RelativeLayout>

</FrameLayout>