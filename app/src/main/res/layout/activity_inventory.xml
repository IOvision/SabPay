<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.InventoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/inv_activity_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:backgroundTint="@color/grey">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/inv_activity_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

<!--            <com.smarteist.autoimageslider.SliderView-->
<!--                android:id="@+id/inv_activity_items_image_sv"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="300dp"-->
<!--                android:visibility="visible"-->
<!--                app:layout_collapseMode="parallax"-->
<!--                app:layout_collapseParallaxMultiplier="0.7"-->
<!--                app:sliderAnimationDuration="600"-->
<!--                app:sliderAutoCycleDirection="back_and_forth"-->
<!--                app:sliderAutoCycleEnabled="true"-->
<!--                app:sliderIndicatorAnimationDuration="600"-->
<!--                app:sliderIndicatorEnabled="false"-->
<!--                app:sliderIndicatorGravity="center_horizontal|bottom"-->
<!--                app:sliderIndicatorOrientation="horizontal"-->
<!--                app:sliderIndicatorPadding="3dp"-->
<!--                app:sliderIndicatorRadius="2dp"-->
<!--                app:sliderIndicatorSelectedColor="#5A5A5A"-->
<!--                app:sliderIndicatorUnselectedColor="#FFF"-->
<!--                app:sliderScrollTimeInSec="2"-->
<!--                app:sliderStartAutoCycle="true">-->
<!--            </com.smarteist.autoimageslider.SliderView>-->

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/inv_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:menu="@menu/inventory_appbar"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/search_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/inventory_search_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Search items..."
                        android:textColor="@color/white"
                        android:textColorHint="#C7C7C7"
                        android:imeOptions="actionSearch"
                        android:visibility="gone"
                        android:layout_toStartOf="@id/inventory_image_close"
                        android:fontFamily="@font/product_sans_regular" />
                    <ImageView
                        android:id="@+id/inventory_image_close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_close"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>
            </RelativeLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/inv_activity_rv_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/inv_activity_cat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:fontFamily="@font/product_sans_regular"
                android:textSize="@dimen/dimen_18sp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="@dimen/dimen_10dp"/>
            <HorizontalScrollView
                android:id="@+id/inv_activity_nsv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/inv_activity_cat_tv">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/inv_activity_chip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/inv_activity_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inv_activity_nsv"
                android:text="Items"
                android:fontFamily="@font/product_sans_regular"
                android:textSize="@dimen/dimen_18sp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/inv_activity_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/inv_activity_item_tv"
                tools:listitem="@layout/inventorty_item_list_item" />
            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/inv_activity_progress"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:SpinKit_Color="@color/lightBlue"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="92dp"
                android:visibility="visible"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/inv_activity_cart_exFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary"
        app:icon="@drawable/ic_cart"
        app:layout_anchor="@id/inv_activity_app_bar_layout"
        app:layout_anchorGravity="end|bottom"
        android:text="@string/_0"
        android:alpha="0.8"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/inv_activity_item_counter_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        app:layout_anchor="@id/inv_activity_cart_exFab"
        app:layout_anchorGravity="top|right"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-20dp">

        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/white_circle_24dp" />

            <TextView
                android:id="@+id/inv_activity_item_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/inventory_separator_layer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8D000000"
        android:visibility="gone"
        android:layout_marginTop="52dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inventory_search_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:visibility="gone"
        tools:listitem="@layout/inventory_search_list"
        android:translationZ="@dimen/dimen_10dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>