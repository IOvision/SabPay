<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.PaymentActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/payment_top_bar"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:navigationIcon="@drawable/icon_back"
            app:title="Paying to"
            android:backgroundTint="@color/grey"
            app:titleTextColor="@color/white"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/payment_activity_wallet_header_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/payment_activity_balance_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:textSize="28sp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/payment_activity_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="@color/grey"
            android:textSize="28sp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_receiver_list_rv"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_below="@id/app_bar_layout"
        android:visibility="visible"
        tools:listitem="@layout/selected_contact_list_item"/>
    <TextView
        android:id="@+id/payment_receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payment_receiver_list_rv"
        android:layout_marginTop="10dp"
        android:visibility="visible"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/payment_activity_amount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:backgroundTint="@color/grey"
        android:layout_below="@id/payment_receiver_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:startIconDrawable="@drawable/rupee_icon"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/payment_activity_amount_et"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_activity_transactionStatus_rv"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:listitem="@layout/transaction_status_list_item"/>
    <Button
        android:id="@+id/payment_activity_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:visibility="visible"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/payment_activity_transaction_progress"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:SpinKit_Color="@color/purple"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>