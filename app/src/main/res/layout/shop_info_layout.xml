<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/shop_info_rl"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/purple"
        android:padding="10dp">
        <TextView
            android:id="@+id/shop_info_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/shop_info_owner_name_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_info_rl"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Name:  "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/shop_info_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shop_info_email_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_info_owner_name_ll"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:  "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/shop_info_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_info_email_ll"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:  "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/shop_info_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="20dp"
            android:textColor="@color/purple"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/shop_info_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call us"
        app:icon="@drawable/phone_icon"
        app:iconTint="@color/white"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>
</RelativeLayout>