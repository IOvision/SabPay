<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.TransactionHistoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButtonHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_transaction_history"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:text="Transactions" />

            <Button
                android:textColor="@color/purple"
                android:id="@+id/btn_order_history"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/purple"
                android:text="Orders history" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transaction_fragment_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/transaction_list_item"
            android:layout_below="@id/toggleButtonHistory"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_fragment_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/transaction_list_item"
            android:layout_below="@id/toggleButtonHistory"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/history_loadMore_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_more"
            app:chipSurfaceColor="#FFDD00"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/blue_link"
            android:layout_marginEnd="@dimen/dimen_32dp"
            android:layout_marginBottom="48dp"/>
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/transaction_fragment_pb"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/purple"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/frag_txn_bg_txt_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="Nothing to show"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/avenir_pro"
            android:visibility="gone"/>

    </RelativeLayout>

</FrameLayout>