<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:id="@+id/gPay_item_mainContainer_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/grey">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gPay_item_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="EdNzcbo2EJXgURS0BHjf"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/gPay_item_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 1000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/gPay_item_parts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:layout_margin="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gPay_item_transactionContainer_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/gPay_item_mainContainer_rl"
        android:background="@color/mustard"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/gPay_item_transactionHeading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:layout_margin="8dp"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"/>

        <ProgressBar
            android:id="@+id/gPay_item_transactionProgress_pb"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gPay_item_parts_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_below="@id/gPay_item_transactionHeading_tv"
            tools:listitem="@layout/group_pay_transaction_list_item"
            android:layout_marginBottom="8dp"/>

    </RelativeLayout>



</RelativeLayout>