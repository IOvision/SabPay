<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <ImageView
        android:id="@+id/offer_item_icon_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/offer_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/offer_item_icon_iv"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/offer_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_pro"
            android:text="Offer Name"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/offer_item_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Description"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textColor="#616060"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</RelativeLayout>