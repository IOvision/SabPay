<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90939393"
    tools:context=".groupPay.manageGroup.GroupManageActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/gpay_manage_swipeRefresh_sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/gpay_manage_groupViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="80dp"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <FrameLayout
        android:id="@+id/gpay_manage_newGroup_fl"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/corner_round_bg"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/gpay_manage_noGrpHeading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No groups yet\n click + to create new group"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>