<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="20dp"
    android:background="#D9DDDC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cart_item_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_toStartOf="@id/cart_item_qty_group"
            android:textSize="20sp"
            tools:text="Milk Rs. 45/L" />

        <LinearLayout
            android:id="@+id/cart_item_qty_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/cart_item_decrease_qty"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/purple"
                android:text="-"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/cart_item_qty_text"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="11"
                android:textSize="@dimen/dimen_12sp"
                android:backgroundTint="@color/purple"/>

            <Button
                android:textColor="@color/purple"
                android:id="@+id/cart_item_increase_qty"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:outlineAmbientShadowColor="@color/purple"
                android:text="+"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>