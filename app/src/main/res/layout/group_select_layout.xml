<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79A5A5A5"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/group_select_layout_search_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_custom"
        android:layout_margin="16dp"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:paddingLeft="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_select_layout_groupList_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_select_layout_search_et"
        tools:listitem="@layout/group_select_list_item"
        android:layout_marginTop="8dp" />


</RelativeLayout>