<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".payment.PaymentActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/payment_top_bar"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:navigationIcon="@drawable/icon_back"
            app:title="Paying to"
            android:backgroundTint="@color/grey"
            app:titleTextColor="@color/white"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/payment_receiver_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/avatar_icon"
        app:civ_border="true"
        app:civ_border_color="@color/mustard"
        app:civ_border_width="1dp"
        app:civ_shadow="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_below="@id/app_bar_layout"/>

    <TextView
        android:id="@+id/payment_receiver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payment_receiver_avatar"
        android:layout_marginTop="10dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/payment_activity_amount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:backgroundTint="@color/grey"
        android:layout_below="@id/payment_receiver_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:startIconDrawable="@drawable/rupee_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/payment_activity_amount_et"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/transaction_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_receiver_name"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/transaction_detail_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/transaction_id_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID: "
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:layout_toEndOf="@id/transaction_id_header" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transaction_detail_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_detail_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/transaction_time_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/transaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:layout_toEndOf="@id/transaction_time_header" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/payment_activity_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:insetTop="0dp"
        android:insetBottom="0dp"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/transaction_progress"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/purple"
        android:layout_below="@id/payment_receiver_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>

</RelativeLayout>